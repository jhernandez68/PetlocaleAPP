<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VeterinariaMainHorarios">

    <ImageView
        android:id="@+id/main_product_detailed"
        android:layout_width="272dp"
        android:layout_height="171dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/petlocaleicon" />

    <TextView
        android:id="@+id/anuncio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entre semana: "
        android:textColor="#572364"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/main_product_detailed"
        >

    </TextView>

    <TextView
        android:id="@+id/dia1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/anuncio1"
        android:text="De"
        android:textColor="#000000"
        android:textSize="30dp"
 />

    <EditText
        android:id="@+id/horarioDia1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:hint="Hora: "
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/dia1"
        app:layout_constraintTop_toTopOf="@id/dia1" />

    <TextView
        android:id="@+id/dia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Hasta"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/dia1" />

    <EditText
        android:id="@+id/horarioDia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:hint="Hora: "
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/dia2"
        app:layout_constraintTop_toTopOf="@id/dia2" />

    <TextView
        android:id="@+id/anuncio_domingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Domingo:"
        android:textColor="#572364"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/dia4"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/dia_domingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="De: "
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/anuncio_domingo" />

    <EditText
        android:id="@+id/horarioDia7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:hint="Hora: "
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/dia_domingo"
        app:layout_constraintTop_toTopOf="@id/dia_domingo" />

    <TextView
        android:id="@+id/dia5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasta:"
        android:textColor="#000000"
        android:textSize="30dp"
