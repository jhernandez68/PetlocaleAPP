    <TextView
        android:id="@+id/anuncio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="SÃ¡bado:"
        android:textColor="#572364"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/dia2"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/dia3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="De: "
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/anuncio2" />

    <EditText
        android:id="@+id/horarioDia3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:hint="Hora: "
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/dia3"
        app:layout_constraintTop_toTopOf="@id/dia3" />

    <TextView
        android:id="@+id/dia4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Hasta:"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/dia3" />

    <EditText
        android:id="@+id/horarioDia4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:hint="Hora: "
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/dia4"
        app:layout_constraintTop_toTopOf="@id/dia4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/guardarHorariosButton"
        android:background="#572364"
        android:textColor="#FFFFFF"
        android:layout_width="171dp"
        android:layout_height="53dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="24dp"
        android:text="Guardar!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horarioDia5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelarHorariosButton2"
        android:layout_width="171dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:background="#FF0000"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dia5" />


</androidx.constraintlayout.widget.ConstraintLayout>