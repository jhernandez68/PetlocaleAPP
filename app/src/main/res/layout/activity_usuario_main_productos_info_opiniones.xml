<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioMainProductosInfoOpiniones">


    <ImageView
        android:id="@+id/main_product_detailed_opiniones"
        android:layout_width="209dp"
        android:layout_height="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077"
        app:srcCompat="@mipmap/petlocaleicon" />

    <TextView
        android:id="@+id/main_name_product_detailed_info_opiniones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Nombre: "
        android:textColor="#572364"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:id="@+id/main_name_product_detailed_info2_opiniones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Nombre"
        android:textColor="#000000"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/main_name_product_detailed_info_opiniones"
        app:layout_constraintTop_toBottomOf="@+id/main_product_detailed_opiniones"

        />

    <TextView
        android:textSize="22dp"
        android:id="@+id/main_name_vet_product_detailed_info_opiniones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Veterinaria"
        android:textColor="#572364"
        app:layout_constraintTop_toBottomOf="@+id/main_name_product_detailed_info2_opiniones"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:textSize="22dp"
        android:id="@+id/main_name_vet_product_detailed_info2_opiniones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Veterinaria"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/main_name_vet_product_detailed_info_opiniones"
        app:layout_constraintTop_toBottomOf="@+id/main_name_product_detailed_info2_opiniones" />

    <TextView
        android:textSize="22dp"
        android:id="@+id/main_precio_product_detailed_info_opiniones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Calificación promedio:"
        android:textColor="#572364"
        app:layout_constraintTop_toBottomOf="@+id/main_name_vet_product_detailed_info2_opiniones"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:textSize="22dp"
        android:id="@+id/main_precio_product_detailed_info2_opiniones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Indefinido"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/main_precio_product_detailed_info_opiniones"
        app:layout_constraintTop_toBottomOf="@+id/main_name_vet_product_detailed_info2_opiniones" />

    <TextView
        android:textSize="22dp"
        android:id="@+id/cantidad_opiniones_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cantidad de reseñas:"
        android:textColor="#572364"
        app:layout_constraintTop_toBottomOf="@+id/main_precio_product_detailed_info_opiniones"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:textSize="22dp"
        android:id="@+id/cantidad_opiniones_producto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Ninguna"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/cantidad_opiniones_producto"
        app:layout_constraintTop_toBottomOf="@+id/main_precio_product_detailed_info_opiniones" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOpiniones"
        android:layout_width="387dp"
        android:layout_height="332dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_precio_product_detailed_info_opiniones" />


</androidx.constraintlayout.widget.ConstraintLayout>