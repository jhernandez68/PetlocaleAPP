<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    >

    <ImageView
        android:id="@+id/ivOpinion"
        android:layout_width="107dp"
        android:layout_height="82dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/petlocaleicon" />

    <TextView
        android:id="@+id/nombre_opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#572364"
        android:text="Nombre: "
        app:layout_constraintStart_toEndOf="@+id/ivOpinion"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombre_opinion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/nombre_opinion"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calificacion_opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificación: "
        android:textColor="#572364"
        app:layout_constraintStart_toEndOf="@+id/ivOpinion"
        app:layout_constraintTop_toBottomOf="@+id/nombre_opinion2" />

    <TextView
        android:id="@+id/calificacion_opinion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calificacion"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/calificacion_opinion"
        app:layout_constraintTop_toBottomOf="@+id/nombre_opinion" />

    <TextView
        android:id="@+id/reseña_opinion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reseña: "
        android:textColor="#572364"
        app:layout_constraintStart_toEndOf="@+id/ivOpinion"
        app:layout_constraintTop_toBottomOf="@+id/calificacion_opinion" />

    <TextView
        android:id="@+id/reseña_opinion2"
        android:layout_width="216dp"
        android:layout_height="33dp"
        android:text="Reseña"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toEndOf="@+id/reseña_opinion"
        app:layout_constraintTop_toBottomOf="@+id/calificacion_opinion"
        app:layout_constraintVertical_bias="0.04" />


</androidx.constraintlayout.widget.ConstraintLayout>