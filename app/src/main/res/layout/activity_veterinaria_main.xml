<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VeterinariaMain"
    android:background="@mipmap/fondo_veterinaria_2"
    >

    <Button
        android:id="@+id/infoButton"
        android:layout_width="303dp"
        android:layout_height="91dp"
        android:text="Información Veterinaria"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/productosButton"
        android:layout_width="303dp"
        android:layout_height="91dp"
        android:layout_marginTop="37dp"
        android:text="Gestión de Productos"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoButton" />

    <Button
        android:id="@+id/serviciosButton"
        android:layout_width="303dp"
        android:layout_height="91dp"
        android:layout_marginTop="33dp"
        android:text="Gestión de Servicios"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productosButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/salirAppButon"
        android:layout_width="300dp"
        android:layout_height="61dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="268dp"
        android:backgroundTint="#D32F2F"
        android:text="salir"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serviciosButton"
        app:layout_constraintVertical_bias="0.125" />
</androidx.constraintlayout.widget.ConstraintLayout>