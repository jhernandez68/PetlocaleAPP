<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    >


    <ImageView
        android:id="@+id/ivVeterinaria"
        android:layout_width="144dp"
        android:layout_height="130dp"
        app:srcCompat="@mipmap/petlocaleicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreVeterinariaList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#572364"
        android:text="Nombre: "
        app:layout_constraintStart_toEndOf="@+id/ivVeterinaria"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreVeterinariaList2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/nombreVeterinariaList"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailVeterinaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textColor="#572364"
        app:layout_constraintStart_toEndOf="@+id/ivVeterinaria"
        app:layout_constraintTop_toBottomOf="@+id/nombreVeterinariaList" />

    <TextView
        android:id="@+id/emailVeterinaria2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desconocido"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/emailVeterinaria"
        app:layout_constraintTop_toBottomOf="@+id/nombreVeterinariaList2" />

    <TextView
        android:id="@+id/yearsVeterinaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experiencia: "
        android:textColor="#572364"
        app:layout_constraintStart_toEndOf="@+id/ivVeterinaria"
        app:layout_constraintTop_toBottomOf="@+id/emailVeterinaria" />

    <TextView
        android:id="@+id/yearsVeterinaria2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desconocido"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/yearsVeterinaria"
        app:layout_constraintTop_toBottomOf="@+id/emailVeterinaria2" />

</androidx.constraintlayout.widget.ConstraintLayout>