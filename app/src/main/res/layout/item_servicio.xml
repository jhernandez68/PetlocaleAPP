<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivServicio"
        android:layout_width="144dp"
        android:layout_height="130dp"
        app:srcCompat="@mipmap/petlocaleicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#572364"
        android:text="Nombre: "
        app:layout_constraintStart_toEndOf="@+id/ivServicio"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreDetailed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/nombreDetailed"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nitDetailedInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo: "
        android:textColor="#572364"
        app:layout_constraintStart_toEndOf="@+id/ivServicio"
        app:layout_constraintTop_toBottomOf="@+id/nombreDetailed2" />

    <TextView
        android:id="@+id/nitDetailed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/nitDetailedInfo"
        app:layout_constraintTop_toBottomOf="@+id/nombreDetailed2" />

    <TextView
        android:id="@+id/yearsDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Costo: "
        android:textColor="#572364"
        app:layout_constraintStart_toEndOf="@+id/ivServicio"
        app:layout_constraintTop_toBottomOf="@+id/nitDetailed2" />

    <TextView
        android:id="@+id/yearsDetailed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="precio"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/yearsDetailed"
        app:layout_constraintTop_toBottomOf="@+id/nitDetailed2" />


    <TextView
        android:id="@+id/emailDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción: "
        android:textColor="#572364"
        app:layout_constraintStart_toEndOf="@+id/ivServicio"
        app:layout_constraintTop_toBottomOf="@+id/yearsDetailed2" />

    <TextView
        android:id="@+id/emailDetailed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/emailDetailed"
        app:layout_constraintTop_toBottomOf="@+id/yearsDetailed2" />

</androidx.constraintlayout.widget.ConstraintLayout>