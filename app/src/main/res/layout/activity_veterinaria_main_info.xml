<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VeterinariaMainInfo"
    android:background="@mipmap/fondo_veterinaria_3">


    <Button
        android:id="@+id/menuPrincipalButton"
        android:layout_width="303dp"
        android:layout_height="91dp"
        android:text="Menú principal"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/horariosButton"
        android:layout_width="303dp"
        android:layout_height="91dp"
        android:layout_marginTop="28dp"
        android:text="Horarios de atención"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuPrincipalButton" />

    <Button
        android:id="@+id/UbicacionButton"
        android:layout_width="303dp"
        android:layout_height="91dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="276dp"
        android:text="Ubicación"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datosButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/datosButton"
        android:layout_width="303dp"
        android:layout_height="91dp"
        android:text="Datos básicos"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horariosButton"
        app:layout_constraintVertical_bias="0.062" />

</androidx.constraintlayout.widget.ConstraintLayout>